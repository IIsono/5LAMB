{
  "info": {
    "name": "Blogify API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://YOUR_API_ID.execute-api.us-east-1.amazonaws.com",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "YOUR_JWT_TOKEN",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Posts",
      "item": [
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Mon premier post\",\n  \"content\": \"Contenu du post avec du texte\",\n  \"status\": \"published\",\n  \"tags\": [\"tech\", \"aws\", \"serverless\"]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/posts",
              "host": ["{{base_url}}"],
              "path": ["posts"]
            }
          }
        },
        {
          "name": "List Posts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/posts?limit=20",
              "host": ["{{base_url}}"],
              "path": ["posts"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "userId",
                  "value": "",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Post",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/posts/:postId?createdAt=1234567890",
              "host": ["{{base_url}}"],
              "path": ["posts", ":postId"],
              "query": [
                {
                  "key": "createdAt",
                  "value": "1234567890"
                }
              ],
              "variable": [
                {
                  "key": "postId",
                  "value": "POST_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Update Post",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Titre mis à jour\",\n  \"content\": \"Contenu mis à jour\",\n  \"status\": \"published\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/posts/:postId?createdAt=1234567890",
              "host": ["{{base_url}}"],
              "path": ["posts", ":postId"],
              "query": [
                {
                  "key": "createdAt",
                  "value": "1234567890"
                }
              ],
              "variable": [
                {
                  "key": "postId",
                  "value": "POST_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/posts/:postId?createdAt=1234567890",
              "host": ["{{base_url}}"],
              "path": ["posts", ":postId"],
              "query": [
                {
                  "key": "createdAt",
                  "value": "1234567890"
                }
              ],
              "variable": [
                {
                  "key": "postId",
                  "value": "POST_ID_HERE"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Media",
      "item": [
        {
          "name": "Get Upload URL",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fileName\": \"image.jpg\",\n  \"fileType\": \"image/jpeg\",\n  \"fileSize\": 1024000\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/media",
              "host": ["{{base_url}}"],
              "path": ["media"]
            }
          }
        },
        {
          "name": "Get Media",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/media/:mediaId",
              "host": ["{{base_url}}"],
              "path": ["media", ":mediaId"],
              "variable": [
                {
                  "key": "mediaId",
                  "value": "MEDIA_ID_HERE"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
